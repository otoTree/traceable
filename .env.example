# S3 Compatible Storage Configuration
S3_REGION="auto"
S3_ENDPOINT="https://your-endpoint.com"
S3_ACCESS_KEY_ID="your_access_key_id"
S3_ACCESS_KEY_SECRET="your_access_key_secret"
S3_BUCKET="your_bucket_name"
S3_FORCE_PATH_STYLE="false" # Set to "true" for MinIO or certain S3 providers
S3_PUBLIC_URL="" # Optional: Custom CDN or public access URL (e.g., https://cdn.example.com)

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"

# OpenAI Configuration
OPENAI_API_KEY="your_openai_api_key"
OPENAI_BASE_URL="your_custom_base_url" # Optional, if you have your own proxy
OPENAI_MODEL="gpt-3.5-turbo" # or gpt-4-turbo-preview
